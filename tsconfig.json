{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "Assets/*": ["src/assets/", "src/assets/*"],
      "Atoms/*": ["src/components/Atoms/", "src/components/Atoms/*"],
      "Compounds/*": ["src/components/Compounds/", "./src/components/Compounds/*"],
      "Templates/*": ["src/components/Templates/", "./src/components/Templates/*"],
      "Pages/*": ["src/components/Pages/", "./src/components/Pages/*"],
      "Text/*": ["src/text/", "src/text/*"],
      "Types/*": ["src/types/", "src/types/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
